
<section class="login-container">

  <div class="login-headline">Log In</div>
  <div class="login-headline-rule-container">
    <div class="login-headline-rule-first"></div>
    <div class="login-headline-triangle"></div>
  </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'minimal') do |f| %>

      <%= f.email_field :email, autofocus: true, placeholder: "Username" %>

      <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>

    <div class="actions">
    <div class="login-forgot-password-buttons-wrapper">
      <%= f.submit "Log In", :class => "login-button" %>
      <%= f.submit "Forgot Password?", :class => "forgot-password-button" %>
    </div>
    </div>

<% end %>


<!-- <%= render "devise/shared/links" %> -->

</section>
